// 平滑滚动到指定部分
function scrollToSection(sectionId) {
event.preventDefault();
const section = document.getElementById(sectionId);
if (section) {
window.scrollTo({
top: section.offsetTop,
behavior: 'smooth'
});
}
}
// 为页脚的链接也添加平滑滚动
document.querySelectorAll('footer a[href^="#"]').forEach(anchor => {
anchor.addEventListener('click', function(e) {
e.preventDefault();
const sectionId = this.getAttribute('href').substring(1);
scrollToSection(sectionId);
});
});
// 联系我们按钮点击事件
document.getElementById('contactBtn').addEventListener('click', function() {
// 选择方式：1. 滚动到联系我们部分 2. 显示模态框
const showModal = true; // 设置为 false 则滚动到联系我们部分
if (showModal) {
openContactModal();
} else {
scrollToSection('contact');
}
});
// 创建并打开联系模态框
function openContactModal() {
// 创建模态框背景
const modalOverlay = document.createElement('div');
modalOverlay.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center';
modalOverlay.id = 'contactModal';
// 创建模态框内容
const modalContent = document.createElement('div');
modalContent.className = 'bg-white rounded-lg shadow-xl w-full max-w-md mx-4 overflow-hidden';
// 模态框头部
const modalHeader = document.createElement('div');
modalHeader.className = 'bg-primary text-white px-6 py-4 flex justify-between items-center';
modalHeader.innerHTML = `
<h3 class="text-xl font-semibold">联系我们</h3>
<button id="closeModal" class="text-white hover:text-gray-200">
<i class="ri-close-line text-xl"></i>
</button>
`;
// 模态框表单
const modalForm = document.createElement('div');
modalForm.className = 'px-6 py-4';
modalForm.innerHTML = `
<form id="contactModalForm" class="space-y-4">
<div>
<label for="modalName" class="block text-sm font-medium text-gray-700 mb-1">姓名</label>
<input type="text" id="modalName" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="请输入您的姓名" required>
</div>
<div>
<label for="modalPhone" class="block text-sm font-medium text-gray-700 mb-1">电话</label>
<input type="tel" id="modalPhone" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="请输入您的电话" required>
</div>
<div>
<label for="modalEmail" class="block text-sm font-medium text-gray-700 mb-1">邮箱</label>
<input type="email" id="modalEmail" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="请输入您的邮箱">
</div>
<div>
<label for="modalMessage" class="block text-sm font-medium text-gray-700 mb-1">留言内容</label>
<textarea id="modalMessage" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="请输入您的留言内容" required></textarea>
</div>
</form>
<div class="mt-4 border-t border-gray-200 pt-4">
<div class="flex items-center mb-2">
<i class="ri-phone-line text-primary mr-2"></i>
<span class="text-gray-700">19982479763</span>
</div>
<div class="flex items-center">
<i class="ri-mail-line text-primary mr-2"></i>
<span class="text-gray-700">luozhicheng.2282@foxmail.com</span>
</div>
</div>
`;
// 模态框底部
const modalFooter = document.createElement('div');
modalFooter.className = 'bg-gray-50 px-6 py-3 flex justify-end';
modalFooter.innerHTML = `
<button id="submitModalForm" class="bg-primary text-white px-4 py-2 !rounded-button font-medium hover:bg-blue-600 transition whitespace-nowrap">提交留言</button>
`;
// 组装模态框
modalContent.appendChild(modalHeader);
modalContent.appendChild(modalForm);
modalContent.appendChild(modalFooter);
modalOverlay.appendChild(modalContent);
// 添加到页面
document.body.appendChild(modalOverlay);
// 关闭模态框事件
document.getElementById('closeModal').addEventListener('click', function() {
document.body.removeChild(modalOverlay);
});
// 点击模态框外部关闭
modalOverlay.addEventListener('click', function(e) {
if (e.target === modalOverlay) {
document.body.removeChild(modalOverlay);
}
});
// 提交表单事件
document.getElementById('submitModalForm').addEventListener('click', function() {
const form = document.getElementById('contactModalForm');
const name = document.getElementById('modalName').value;
const phone = document.getElementById('modalPhone').value;
const message = document.getElementById('modalMessage').value;
if (name && phone && message) {
// 显示提交成功消息
showSuccessMessage();
// 移除模态框
document.body.removeChild(modalOverlay);
} else {
// 简单的表单验证
if (!name) document.getElementById('modalName').classList.add('border-red-500');
if (!phone) document.getElementById('modalPhone').classList.add('border-red-500');
if (!message) document.getElementById('modalMessage').classList.add('border-red-500');
}
});
}
// 显示提交成功消息
function showSuccessMessage() {
const successMsg = document.createElement('div');
successMsg.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 flex items-center';
successMsg.innerHTML = `
<i class="ri-check-line mr-2 text-xl"></i>
<span>留言提交成功，我们将尽快与您联系！</span>
`;
document.body.appendChild(successMsg);
// 3秒后自动移除
setTimeout(() => {
document.body.removeChild(successMsg);
}, 3000);
}
</script>
</body>
